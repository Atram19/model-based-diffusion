<mujoco>
    <option timestep="0.002" />
  
    <worldbody>
      <geom name="ground" type="plane" size="10 10 0.1" rgba="0.8 0.9 0.8 1" friction="1 0.005 0.0001"/>
  
      <body name="cylinder1" pos="0 0 0.5">
        <geom name="cylinder1_geom" type="cylinder" size="0.5 0.0005" rgba="1 0 0 1" friction="1 0.005 0.0001"/>
        <joint name="cylinder1_x" type="slide" axis="1 0 0" limited="true" range="-5 5"/>
        <joint name="cylinder1_y" type="slide" axis="0 1 0" limited="true" range="-5 5"/>
      </body>
  
      <body name="cylinder2" pos="1 0 0.5">
        <geom name="cylinder2_geom" type="cylinder" size="0.5 0.0005" rgba="0 0 1 1" friction="1 0.005 0.0001"/>
        <joint name="cylinder2_x" type="slide" axis="1 0 0" limited="true" range="-5 5"/>
        <joint name="cylinder2_y" type="slide" axis="0 1 0" limited="true" range="-5 5"/>
      </body>
    </worldbody>
  
    <actuator>
      <motor name="cylinder1_x_motor" joint="cylinder1_x" gear="1" />
      <motor name="cylinder1_y_motor" joint="cylinder1_y" gear="1" />
    </actuator>
  </mujoco>